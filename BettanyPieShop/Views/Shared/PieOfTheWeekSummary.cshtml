@model PieViewModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h3>
                <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
            <div class="pull-right">
                <h4 >@Model.Price.ToString("c")</h4>
                <h4>@Model.PriceInCryptocurrency.ToString() @Model.CryptocurrencyMarc</h4>
            </div>
            
        </div>
        <div class="addToCart">
            <p class="button">
                <input class="btn btn-primary" type="button" onclick="AddToShopingCart(@Model.PieId)" value="Add to cart">
            </p>
        </div>
        
        
    </div>
</div>

